@using CEC.Web.SRV.Resources

<div id="dashboard-inportData" class="row">
    <div class="col-sm-3">
        @Html.Partial("_TreeViewLocalities")
    </div>
    <div class="col-sm-9">
        <div class="box">
            <div class="box-content">
                <h5 class="page-header">@MUI.ImportStatisticsMgmt</h5>
                @Html.Partial("_ImportsList")
            </div>
        </div>
        <div class="box">
            <div class="box-content">
                <h5 class="page-header">@MUI.ViewImportStatistics</h5>
                <div id="view_statistics"></div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    var currentRegion = 0;

    $.onRegionSelect = function (regionId) {
        currentRegion = regionId;
        var importGrid = $('#importList').jqGrid();
        importGrid.jqGrid('setGridParam', { 'postData': { 'regionId': regionId } });
        importGrid.trigger('reloadGrid', [{ page: 1 }]);
    };

    $.getSelectedRegion = function () {
        return currentRegion;
    };
</script>
