@using CEC.Web.SRV.Infrastructure.Grids
@using CEC.Web.SRV.Models.History
@using Lib.Web.Mvc.JQuery.JqGrid
@model long

@{
    var grid = Html.GridOptions<DocumentTypeHistoryGridModel>("docTypeHistory", width: 800)
		.BuildGrid(Url.Action("ListDocumentTypeHistoryAjax", new { id = Model }), columnChooser: false, showFilterToolbar: false)
		.Navigator(new JqGridNavigatorOptions { Add = false, Edit = false, Delete = false, Search = false });
}

<div class="clearfix">
    @grid.GetHtml()
</div>

<script type="text/javascript">
    $(document).ready(function () {
        @grid.GetJavaScript();
        $('#docTypeHistory').jqGrid().remapColumns([1, 2, 0, 3, 4, 5, 6, 7, 8], true, false);
        $('.modal-content').attr('style', 'width:840px;');
    });
</script>