@using CEC.Web.SRV.Infrastructure.Grids
@using CEC.Web.SRV.Models.History
@using Lib.Web.Mvc.JQuery.JqGrid
@model long

@{
    var grid = Html.GridOptions<AddressHistoryGridModel>("addressHistory", width: 960)
        .BuildGrid(Url.Action("ListAddressHistoryAjax", new { id = Model }), showFilterToolbar:false, columnChooser:false)
		.Navigator(new JqGridNavigatorOptions { Add = false, Edit = false, Delete = false, Search = false });
}

<div class="clearfix">
    @grid.GetHtml()
</div>

<script type="text/javascript">
    $(document).ready(function () {
        @grid.GetJavaScript();
        $('.modal-content').attr('style', 'width:1000px;');
    });
</script>