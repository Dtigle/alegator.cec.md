<span class="badge" id="messageNotification"></span>

<script type="text/javascript">
	$(document).ready(function () {
		$.getCountNotification();
		setInterval(function () { $.getCountNotification(); }, 30000);
	});
	
	$.getCountNotification = function () {
		var url = '@Url.Action("GetCountNotification","Notification")';
		$.ajax({
			type: "POST",
			url: url,
			success: function (data) {
				if (data > 0) {
					$("#messageNotification").text(data);
				} else {
					$("#messageNotification").hide();
				}
			}
		});
	};
</script>
