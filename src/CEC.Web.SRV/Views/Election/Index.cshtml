@using CEC.Web.SRV.Infrastructure.Grids
@using CEC.Web.SRV.Models.Election
@using CEC.Web.SRV.Resources
@using Lib.Web.Mvc.JQuery.JqGrid
@{
    ViewBag.Title = MUI.Elections_TabTitle;
}

@{
    var grid = Html.GridOptions<ElectionGridModel>("electionsGrid")
        .BuildGrid(Url.Action("ListElectionsAjax"), null, null, null, null /*Url.Action("UnDelete")*/,
            Url.Action("ElectionHistory", "History"), Url.Action("ExportElections"))
        .Navigator(new JqGridNavigatorOptions()
        {
            Add = false,
            Edit = false,
            Delete = false,
            Search = true,
            AddFunction = "$.CreateUpdateElection",
            EditFunction = "$.CreateUpdateElection",
            DeleteFunction = "$.DeleteElection",
            CloneToTop = true
        });
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-content">
                <h4 class="page-header">@MUI.Elections_TabTitle</h4>
                @grid.GetHtml()
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        @grid.GetJavaScript();
    });
	$.CreateUpdateElection = function (electionId) {
	    var electionParam = null;
		var url = '@Url.Action("CreateUpdate","Election")';
		var dialogTitle = '@MUI.ElectionTypeAdd_DialogTitle';
	    if (electionId != undefined) {
    		dialogTitle = '@MUI.ElectionTypeEdite_DialogTitle';
	        electionParam = electionId;
		}

    	$.openDialog($(this), {
    	    url: url + '?electionId=' + electionParam,
    		title: dialogTitle,
    		onSubmit: function () {
    		    $("#electionsGrid").trigger('reloadGrid');
    		},
    	});
    };

    $.DeleteElection = function (electionId) {

		var url = '@Url.Action("Delete")';

		BootstrapDialog.confirm('@MUI.ElectionTypeDelete_Message', function (result) {
			if (result) {
				$.ajax({
					type: "POST",
					url: url,
					data: { id: electionId },
					success: function () {
					    $("#electionsGrid").trigger('reloadGrid');
					}
				});
			}
		});
	};
</script>