@using CEC.Web.SRV.Resources
@using Microsoft.AspNet.Identity
@model CEC.Web.SRV.Models.Account.ResetPasswordViewModel

<div class="clearfix">
    <p>@MUI.ResetPassword_AuthenticationMess <strong>@User.Identity.GetUserName()</strong>.</p>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "frmChangePass" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.UserId)
      
        <div class="form-group">
            @Html.EditorFor(x => x.NewPassword)
        </div>
        <div class="form-group">
            @Html.EditorFor(x => x.ConfirmPassword)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
	            <input type="submit" id="btnChangePass" value="@MUI.ButtonResPassword" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-6');
    $('.rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-4');
</script>