@using CEC.Web.SRV.Resources
@model CEC.Web.SRV.Models.Election.UpdateElectionModel

<div class="clearfix">

    @using (Html.BeginForm("CreateUpdate", "Election", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.EditorFor(x => x.ElectionType)
        </div>
        <div class="form-group">
            @Html.EditorFor(x => x.ElectionDate)
        </div>
        <div class="form-group">
            @Html.EditorFor(x => x.SaiseId)
        </div>
	    <div class="form-group">
		    @Html.EditorFor(x => x.Comments)
	    </div>
		  <div class="form-group">
            @Html.EditorFor(x => x.AcceptAbroadDeclaration)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@MUI.ButtonSave" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-7');
    $('.rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-4');
    
    //$('.box1 .rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-7');
    //$('.box1 .rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-4');

    $('#ElectionDate').datepicker({
        changeMonth: true,
        changeYear: true,
    });

    $('span.fa-calendar').each(function () {
        var parent = $(this).closest('div');
        parent.addClass('has-feedback');
    });
</script>