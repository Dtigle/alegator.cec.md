@using CEC.SRV.Domain.Importer
@model CEC.Web.SRV.Models.Conflict.StatusMessageConflictModel


@if (Model.ConflictShares.Count > 0)
{
    <div>
        <table class="table table-striped table-bordered table-hover table-heading no-border-bottom">
            <thead>
                <tr>
                    <th>Detalii partajare conflict</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var conflictShare in Model.ConflictShares)
                {
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Data partajare:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.Created
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Partajat de:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.CreatedBy
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Din regiunea:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.SourceRegionName
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Pentru regiunea:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.DestinationRegionName
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Motiv partajare:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.Reason
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="rsa-form-group">
                                <div class="control-label col-sm-3">
                                    <label>Notă:</label>
                                </div>
                                <div class="control-display-value col-sm-9">
                                    @conflictShare.Note
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


