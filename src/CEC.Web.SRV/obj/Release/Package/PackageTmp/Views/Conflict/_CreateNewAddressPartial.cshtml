@using CEC.Web.SRV.Resources
@model CEC.Web.SRV.Models.Conflict.CreateAddressModel

<div class="clearfix">

    @using (Html.BeginForm("CreateNewAddress", "Conflict", FormMethod.Post, new { @class = "form-horizontal" }))
    {   
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(x => x.RspId)
        @Html.HiddenFor(x => x.RegionId)
        @Html.HiddenFor(x => x.StreetId)
        <div class="form-group">
            @Html.EditorFor(x => x.Street, new {ReadOnly = true})
        </div>
        <div class="form-group">
            @Html.EditorFor(x => x.HouseNumber, new {ReadOnly = true})
        </div>
	    <div class="form-group">
		    @Html.EditorFor(x => x.Suffix, new {ReadOnly = true})
	    </div>

		<div class="form-group">
            @Html.EditorFor(x => x.PollingStationId)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
	            <input type="submit" value="@MUI.ButtonSave" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-6');
    $('.rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-4');
    $('#PollingStationId').select2();
</script>