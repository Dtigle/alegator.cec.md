
@using CEC.Web.SRV.Infrastructure.Grids
@using CEC.Web.SRV.Models.Lookup
@using CEC.Web.SRV.Models.UnDelete
@using CEC.Web.SRV.Resources
@using Lib.Web.Mvc.JQuery.JqGrid

@{
    ViewBag.Title = MUI.ConflictShareReasons;
}

@{
    var grid = Html.GridOptions<LookupGridModel>("conflictShareReasons")
        //.SetOptions(x => x.ResizeStop = "saveGridConfig")
        .BuildGrid(Url.Action("ListConflictShareReasonsAjax"), null, null, null, Url.Action("UnDeleteConflictShareReason"),
            /*Url.Action("ConflictShareReasonHistory", "History"),*/ Url.Action("ExportConflictShareReasons"))
        .Navigator(new JqGridNavigatorOptions()
        {
            Add = true,
            Edit = true,
            Delete = true,
            Search = true,
            AddFunction = "$.CreateUpdateConflictShareReason",
            EditFunction = "$.CreateUpdateConflictShareReason",
            DeleteFunction = "$.DeleteConflictShareReason",
            CloneToTop = true
        });
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-content">
                <h4 class="page-header">@MUI.ConflictShareReasons_TabTitle</h4>
                @grid.GetHtml()
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        @grid.GetJavaScript();
    });

    $.CreateUpdateConflictShareReason = function (conflictShareReasonId) {

		var managerTypeParam = null;
	  	var url = '@Url.Action("CreateUpdateConflictShareReason", "Lookup")';
	  	var dialogTitle = '@MUI.ConflictShareReasonsAdd_DialogTitle';
        if (conflictShareReasonId != undefined) {
			dialogTitle = '@MUI.ConflictShareReasonsEdit_DialogTitle';
            managerTypeParam = conflictShareReasonId;
		}

	  	$.openDialog($(this), {
	  	    url: url + '?conflictShareReasonId=' + managerTypeParam,
	  		title: dialogTitle,
	  		onSubmit: function () {
	  		    $("#conflictShareReasons").trigger('reloadGrid');
	  		},
	  	});
	};

    $.DeleteConflictShareReason = function (conflictShareReasonId) {

		var url = '@Url.Action("DeleteConflictShareReason", "Lookup")';

		BootstrapDialog.confirm('@MUI.ConflictShareReasonsDelete_Message', function (result) {
			if (result) {
				$.ajax({
					type: "POST",
					url: url,
					data: { conflictShareReasonId: conflictShareReasonId },
					success: function () {
					    $("#conflictShareReasons").trigger('reloadGrid');
					}
				});
			}
		});
	};
</script>
