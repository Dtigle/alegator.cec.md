@using CEC.Web.SRV.Resources
@model CEC.Web.SRV.Models.Conflict.RejectConflict

<div class="clearfix">

    @using (Html.BeginForm("RejectAddressConflictSave", "Conflict", FormMethod.Post, new { @class = "form-horizontal" }))
    {   
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(x=>x.ConflictStatus)

        for (int i = 0; i < Model.ConflictIds.Count; i++)
        {
            @Html.HiddenFor(x => x.ConflictIds[i])
        }
        <div class="form-group comment_box">
            @Html.EditorFor(x => x.Comment)
        </div>

        <div class="form-group comment_box">
            <div class="col-md-offset-2 col-md-10">
	            <input type="submit" value="@MUI.ButtonSave" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.comment_box .rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-8');
    $('.comment_box .rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-3');
</script>