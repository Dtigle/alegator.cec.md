@using CEC.Web.SRV.Resources
@model CEC.Web.SRV.Models.Voters.UpdateAddressModel

<div class="clearfix">

    @using (Html.BeginForm("UpdateAddress", "Voters", FormMethod.Post, new {@class = "form-horizontal"}))
    {
	    @Html.AntiForgeryToken()
	    @Html.ValidationSummary(true)
	    @Html.HiddenFor(x => x.Id)

	    <div class="box_fields">
		    <div class="form-group">
			    @Html.EditorFor(x => x.PersonInfo.FullName, new {ReadOnly = true})
		    </div>
	    </div>

	    <div class="box_fields">
		    <div class="form-group rsa-form-group">
			     <div class="control-label col-sm-2">
                    <label>@MUI.UpdateVotes_CurrentAddress</label>
                </div>
			    @Html.EditorFor(x => x.BaseAddressInfo.FullAddress, new {ReadOnly = true, HideLabel = true})
		    </div>
	    </div>

	    <div class="box_fields">
		    <div class="form-group rsa-form-group">
			     <div class="control-label col-sm-2">
                    <label>@MUI.UpdateVotes_NewAddress</label>
                </div>
			    @Html.EditorFor(x => x.DeclaredStayAddressInfo.AddressId, new { HideLabel = true})
		    </div>
	    </div>

	    <div class="box_fields">
		    <div class="row form-group">
			    @Html.EditorFor(x => x.DeclaredStayAddressInfo.ApNumber)
			    @Html.EditorFor(x => x.DeclaredStayAddressInfo.ApSuffix)
		    </div>
	    </div>
        <div class="box_fields">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@MUI.ButtonSave" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.box_fields .rsa-form-group > div.col-sm-4').removeClass('col-sm-4').addClass('col-sm-8');
    $('.box_fields .rsa-form-group > div.col-sm-2').removeClass('col-sm-2').addClass('col-sm-3');
	$('.modal-content').attr('style', 'width:600px;');
	
	function addressDataRequest(term, page, pageLimit) {
		return {
			q: term,
			pageLimit: pageLimit,
			page: page,
			regionId: null
		};
	}

	function addressResults(data, more) {
		return { results: data, more: more };
	}

</script>