<div class="modal fade" id="editPartyDialog" style="top: 100px">
    <div class="modal-dialog" data-bind="with: SelectedParty">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h4 class="modal-title" data-bind="ifnot: editMode()">Adăugare Partid</h4>
                <h4 class="modal-title" data-bind="if: editMode()">Editare Partid - <strong><span data-bind="text: NameRo"></span></strong></h4>
            </div>

            <div class="modal-body">
                <div class="well form-horizontal">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="col-xs-2 control-label">Logoul curent:</label>
                                <div class="col-xs-1">
                                    <img class="img-rounded pull-right" height="42" width="42"
                                         data-bind="attr: { src: '@Url.Action("ImageLoad")' + '?partyId=' + ImageId() }"/>
                                </div>
                                
                                <label class="col-xs-2 control-label">Cod partid:</label>
                                <div class="col-xs-3 has-feedback" data-bind="validationElement: Code">
                                    <input class="form-control" placeholder="Cod partid" data-bind="value: Code"/>
                                </div>
                            </div>

                            <div class="form-group has-feedback" data-bind="validationElement: NameRo">
                                <label class="col-xs-2 control-label">Denumire (Ro):</label>
                                <div class="col-xs-10">
                                    <textarea class="form-control" placeholder="Denumirea partidului (Ro)" data-bind="value: NameRo"></textarea>
                                </div>
                            </div>

                            <div class="form-group has-feedback" data-bind="validationElement: NameRu">
                                <label class="col-xs-2 control-label">Denumirea (Ru):</label>
                                <div class="col-xs-10">
                                    <textarea class="form-control" placeholder="Denumirea partidului (Ru)" data-bind="value: NameRu"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-2 control-label">Data înregistrării:</label>
                                <div class="col-xs-3">
                                    <input class="form-control datePicker" placeholder="Data înregistrării" data-bind="value: moment(DateOfRegistration()).format('DD.MM.YYYY')"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-2 control-label">Logoul:</label>
                                <div class="col-xs-6">
                                    <input type="file" class="form-control"
                                           data-bind="fileInput: fileData, customFileInput: { buttonClass: 'btn btn-success', fileNameClass: 'disabled form-control'}"
                                           accept="image/*"/>
                                </div>
                                <div class="col-xs-4">
                                    <img style="height: 125px;" class="img-rounded pull-right" data-bind="attr: { src: fileData().dataURL }, visible: fileData().dataURL" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-2 control-label">Statut:</label>
                                <div class="col-xs-5">
                                    <select class="form-control" placeholder="Data înregistrării"
                                            data-bind="options: $root.PartyStatuses, 
                                                       optionsText: 'Value', optionsValue: 'Key', 
                                                       value: Status"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: $parent.CancelEditParty">Închide</button>
                <button type="button" class="btn btn-primary" data-bind="click: $parent.SaveUpdateParty, enable: isValid() && !inCallMode()">Salvează</button>
            </div>
        </div>
    </div>
</div>
