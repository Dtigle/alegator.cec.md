<div class="modal fade" id="votingHoursDialog" style="top: 100px">
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h4 class="modal-title">Selectați opțiunile pentru activare</h4>
            </div>

            <div class="modal-body">
                <div class="well form-horizontal">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="row form-group">
                                <div class="col-sm-4">
                                    <div>
                                        <label>
                                            Ora începerii scrutinului
                                        </label>

                                        <input type="datetime" id="electionStartTime" class="dialogControl">

                                        <div id="electionStartTimeError" class="error d-none">Ora începerii scrutinului nu este valida</div>
                                    </div>

                                    <div>
                                        <label>
                                            Ora încheierii scrutinului
                                        </label>

                                        <input type="datetime" id="electionEndTime" class="dialogControl">

                                        <div id="electionEndTimeError" class="error d-none">Ora încheierii scrutinului nu este valida</div>
                                    </div>

                                    <div>
                                        <label>
                                            Diferența de ora Moldovei
                                        </label>

                                        <select id="timeDifferenceMoldovaDropdown" class="dialogControl">
                                            <option value="-12">-12</option>
                                            <option value="-11">-11</option>
                                            <option value="-10">-10</option>
                                            <option value="-9">-9</option>
                                            <option value="-8">-8</option>
                                            <option value="-7">-7</option>
                                            <option value="-6">-6</option>
                                            <option value="-5">-5</option>
                                            <option value="-4">-4</option>
                                            <option value="-3">-3</option>
                                            <option value="-2">-2</option>
                                            <option value="-1">-1</option>
                                            <option value="0" selected>0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                            <option value="11">11</option>
                                            <option value="12">12</option>
                                        </select>

                                        <div id="timeDifferenceMoldovaError" class="error d-none">Diferența de ora Moldovei trebuie sa fie între -12 și 12</div>
                                    </div>

                                    <div>
                                        <label>
                                            Minute de prelungire <span id="firstDay" class="d-none">1-a zi</span>
                                        </label>

                                        <select id="hoursExtendedDropdown" class="dialogControl">
                                            <option value="0" selected>0</option>
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="40">40</option>
                                            <option value="50">50</option>
                                            <option value="60">60</option>
                                            <option value="70">70</option>
                                            <option value="80">80</option>
                                            <option value="90">90</option>
                                            <option value="100">100</option>
                                            <option value="110">110</option>
                                            <option value="120">120</option>
                                        </select>
                                    </div>

                                    <div id="hoursExtendedSecondDay" class="d-none">
                                        <label>
                                            Minute de prelungire a 2-a zi
                                        </label>

                                        <select id="hoursExtendedDropdownSecondDay" class="dialogControl">
                                            <option value="0" selected>0</option>
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="40">40</option>
                                            <option value="50">50</option>
                                            <option value="60">60</option>
                                            <option value="70">70</option>
                                            <option value="80">80</option>
                                            <option value="90">90</option>
                                            <option value="100">100</option>
                                            <option value="110">110</option>
                                            <option value="120">120</option>
                                        </select>
                                    </div>

                                    <div class="checkbox electionDuration">
                                        <label>
                                            <input type="checkbox" id="electionDurationId" class="dialogControl">
                                            Durata scrutin (2 zile)
                                            <i class="fa fa-square-o small"></i>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="radio" class="dialogControl" value="1" id="r1">
                                            <i class="fa fa-circle-o small"></i>
                                            Secțiile selectate (<span class="selectedItems">0</span>)
                                        </label>
                                    </div>

                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="radio" class="dialogControl" value="2" checked> Toate secțiile
                                            <i class="fa fa-circle-o small"></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Închide</button>
                <button id="executeSubmittingVotingHours" type="button" class="btn btn-primary" onclick="submitVotinHoursOptions()">Execută</button>
            </div>
        </div>
    </div>
</div>
